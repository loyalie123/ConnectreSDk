<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="16dp"
		android:background="@color/white">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

		<TextView
				android:id="@+id/titleTV"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/colorPrimary"
				android:fontFamily="@font/sinkinsans_700bold"
				android:gravity="center"
				android:paddingTop="16dp"
				android:paddingBottom="16dp"
				android:text="Leave a comment"
				android:textColor="@color/white"
				android:textSize="16sp" />

		<EditText
				android:id="@+id/commentET"
				android:layout_width="match_parent"
				android:layout_height="120dp"
				android:layout_margin="16dp"
				android:background="@drawable/grey_rect"
				android:fontFamily="@font/sinkinsans_400regular"
				android:gravity="top|left"
				android:hint="Your Comment..."
				android:maxLength="400"
				android:padding="16dp"
				android:textColor="@color/textColorDark"
				android:textColorHint="@color/greyMedium"
				android:textSize="14sp" />

		<LinearLayout
				android:id="@+id/commentCbParent"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="28dp"
				android:orientation="horizontal"
				android:padding="4dp">

			<CheckBox
					android:id="@+id/commentCB"
					android:layout_width="32dp"
					android:layout_height="32dp"
					android:clickable="false"
					android:duplicateParentState="true"
					android:gravity="center"
					android:padding="4dp"
					android:textSize="14sp" />

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="8dp"
					android:fontFamily="@font/sinkinsans_400regular"
					android:text="I want to skip this step"
					android:textColor="@color/greyMedium"
					android:textSize="14sp" />

		</LinearLayout>


		<TextView
				android:id="@+id/commentBtn"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginLeft="80dp"
				android:layout_marginTop="20dp"
				android:layout_marginRight="80dp"
				android:layout_marginBottom="16dp"
				android:background="@color/colorPrimary"
				android:elevation="2dp"
				android:fontFamily="@font/sinkinsans_700bold"
				android:gravity="center"
				android:paddingStart="8dp"
				android:paddingTop="12dp"
				android:paddingEnd="8dp"
				android:paddingBottom="12dp"
				android:text="Submit"
				android:textAllCaps="false"
				android:textColor="@color/white"
				android:textSize="16sp" />
	</LinearLayout>

</FrameLayout>
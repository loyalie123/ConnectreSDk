<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

	<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/pdficon"
			android:layout_width="35.2dp"
			android:layout_height="40.2dp"
			android:layout_marginStart="32.2dp"
			android:layout_marginTop="41.3dp"
			android:src="@drawable/ic_pdf"
			app:layout_constraintEnd_toStartOf="@+id/pdfNmaeTv"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/pdfNmaeTv"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="14.6dp"
			android:layout_marginTop="41.3dp"
			android:fontFamily="@font/sinkinsans_400regular"
			android:text="Noc Document"
			android:textColor="@color/charcoal_grey"
			android:textSize="11sp"
			app:layout_constraintStart_toEndOf="@+id/pdficon"
			app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/pdfDesTv"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="14.6dp"
			android:layout_marginTop="11dp"
			android:fontFamily="@font/sinkinsans_400italic"
			android:text="Lorem ipsum is a dummyâ€¦"
			android:textColor="#66000000"
			android:textSize="10sp"
			app:layout_constraintEnd_toStartOf="@+id/shareIv"
			app:layout_constraintStart_toEndOf="@+id/pdficon"
			app:layout_constraintTop_toBottomOf="@+id/pdfNmaeTv" />

	<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/shareIv"
			android:layout_width="18.3dp"
			android:layout_height="18.3dp"
			android:src="@drawable/ic_share_dash"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/downloadIv"

			app:layout_constraintStart_toEndOf="@+id/pdfDesTv"
			app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/downloadIv"
			android:layout_width="15.8dp"
			android:layout_height="17.1dp"
			android:layout_marginStart="23.8dp"
			android:layout_marginEnd="31.6dp"
			android:src="@drawable/ic_surface_1"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@+id/shareIv"
			app:layout_constraintTop_toTopOf="parent" />
	<View android:layout_width="0dp"
			android:layout_height="0.7dp"
			android:layout_marginTop="25dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="32.5dp"
			android:layout_marginEnd="31.5dp"
			android:background="#EBEBEB"

			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/pdfDesTv"/>
</androidx.constraintlayout.widget.ConstraintLayout>
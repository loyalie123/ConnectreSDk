<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

	<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/faqTitle"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:background="?android:attr/selectableItemBackground"
			android:paddingTop="20dp"
			android:paddingBottom="20dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">

		<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/qnTV"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginEnd="4dp"
				android:lineSpacingExtra="4dp"
				android:paddingStart="16dp"
				android:textColor="@color/textColorGreyAlpha70"
				android:textSize="12sp"
				app:fontFamily="@font/sinkinsans_400regular"
				app:layout_constraintEnd_toStartOf="@id/arrowIV"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

		<androidx.appcompat.widget.AppCompatImageView
				android:id="@+id/arrowIV"
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:layout_marginEnd="35dp"
				app:layout_constraintBottom_toBottomOf="@id/qnTV"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/qnTV"
				app:layout_constraintTop_toTopOf="@id/qnTV"
				app:srcCompat="@drawable/ic_chevron_right_black_24dp" />


	</androidx.constraintlayout.widget.ConstraintLayout>

	<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/answerTV"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:fontFamily="@font/sinkinsans_400regular"
			android:lineSpacingExtra="4dp"
			android:paddingStart="16dp"
			android:paddingTop="16dp"
			android:paddingEnd="16dp"
			android:paddingBottom="20dp"
			android:textColor="@color/textColorGrey"
			android:textSize="12sp"
			android:visibility="visible"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/faqTitle" />

	<View
			android:layout_width="0dp"
			android:layout_height="0.5dp"
			android:layout_marginStart="16dp"
			android:layout_marginEnd="16dp"
			android:background="#1a000000"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/answerTV" />


</androidx.constraintlayout.widget.ConstraintLayout>
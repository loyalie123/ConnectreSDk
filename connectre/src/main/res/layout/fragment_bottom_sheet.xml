<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingTop="20dp"

		android:paddingBottom="30dp"
		tools:context=".ui.home.BottomSheetFrag">


	<TextView
			android:id="@+id/callnowTv"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"

			android:fontFamily="@font/sinkinsans_600semibold"
			android:gravity="center"
			android:text="Whatsapp Now"
			android:textColor="@color/charcoal_grey"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

	<View
			android:id="@+id/view1"
			android:layout_width="0dp"
			android:layout_height="1dp"
			android:layout_marginTop="25dp"

			android:layout_marginBottom="25dp"
			android:background="@color/greyHint"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/callnowTv" />

	<TextView
			android:id="@+id/request_callback"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="25dp"
			android:fontFamily="@font/sinkinsans_600semibold"
			android:gravity="center"
			android:text="Request a call back"
			android:textColor="@color/charcoal_grey"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/view1" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="3dp"
		android:layout_marginEnd="10dp"
		android:foreground="?android:attr/selectableItemBackground"
		app:cardCornerRadius="3dp"
		app:cardElevation="2dp"
		app:cardPreventCornerOverlap="false"
		app:cardUseCompatPadding="true">

	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="305dp"
			android:layout_height="wrap_content"

			>

		<androidx.appcompat.widget.AppCompatImageView
				android:id="@+id/eventIV"
				android:layout_width="110dp"
				android:layout_height="130dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

		<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/eventTitleTV"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="10dp"
				android:layout_marginTop="19dp"
				android:ellipsize="end"
				android:singleLine="true"
				android:text="Lorem Ipsum"
				android:textColor="#323232"
				android:textSize="14sp"
				app:fontFamily="@font/sinkinsans_500medium"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/eventIV"
				app:layout_constraintTop_toTopOf="parent" />

		<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/eventDescriptionTV"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="10dp"
				android:layout_marginTop="4dp"
				android:ellipsize="end"
				android:lineSpacingExtra="2dp"
				android:maxLines="2"
				android:layout_marginEnd="10dp"
				android:text="Lorem Ipsum is simple "
				android:textColor="#999999"
				android:textSize="12sp"
				app:fontFamily="@font/sinkinsans_500medium"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/eventIV"
				app:layout_constraintTop_toBottomOf="@+id/eventTitleTV" />

		<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/eventDateTV"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="10dp"
				android:background="#000000"
				android:fontFamily="@font/sinkinsans_500medium"
				android:paddingStart="12dp"
				android:paddingTop="1dp"
				android:paddingEnd="12dp"
				android:paddingBottom="1dp"
				android:text="Dec 12, 2018"
				android:textColor="@color/colorAccent"
				android:textSize="14sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toEndOf="@+id/eventIV"
				app:layout_constraintTop_toBottomOf="@+id/eventDescriptionTV" />

	</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
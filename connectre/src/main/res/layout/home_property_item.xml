<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		xmlns:app="http://schemas.android.com/apk/res-auto">

	<androidx.cardview.widget.CardView
			android:layout_width="280dp"
			android:layout_height="wrap_content"
app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="3dp"
			android:layout_marginTop="3dp"
			android:layout_marginEnd="15dp"
			android:foreground="?android:attr/selectableItemBackground"
			app:cardCornerRadius="3dp"
			app:cardElevation="2dp"
			app:cardPreventCornerOverlap="false"
			app:cardUseCompatPadding="true">

		<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="305dp"
				android:layout_height="wrap_content"

				>

			<androidx.appcompat.widget.AppCompatImageView
					android:id="@+id/propertyIV"
					android:layout_width="0dp"
					android:layout_height="117dp"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					android:src="@drawable/p1"
					android:adjustViewBounds="true"
					android:scaleType="fitXY"
					app:layout_constraintTop_toTopOf="parent" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="10sp"
				android:background="#414141"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				android:fontFamily="@font/sinkinsans_600semibold"
				android:textColor="#ffffff"

				android:id="@+id/amountTv"
				android:padding="7dp"

			android:text="Rs 5.80 Cr+"
				/>
			<androidx.appcompat.widget.AppCompatTextView
					android:id="@+id/propertyTitleTV"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginStart="14dp"
					android:layout_marginTop="11dp"
					android:ellipsize="end"
					android:singleLine="true"
					android:text="Lorem Ipsum"
					android:textColor="@color/charcoal_grey"
					android:textSize="12sp"
					app:fontFamily="@font/sinkinsans_600semibold"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/propertyIV" />

			<androidx.appcompat.widget.AppCompatTextView
					android:id="@+id/propertyDescriptionTV"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginStart="14dp"
					android:layout_marginTop="7dp"
					android:ellipsize="end"
					android:lineSpacingExtra="2dp"
					android:maxLines="2"
					android:layout_marginEnd="10dp"
					android:text="Lorem Ipsum is simple "
					android:textColor="#66303e47"
					android:textSize="14sp"
					app:fontFamily="@font/sinkinsans_600semibold"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/propertyTitleTV" />

			<androidx.appcompat.widget.AppCompatTextView
					android:id="@+id/propertyDateTV"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="10dp"
					android:background="#000000"
					android:fontFamily="@font/sinkinsans_500medium"
					android:paddingStart="12dp"
					android:paddingTop="1dp"
					android:paddingEnd="12dp"
					android:paddingBottom="1dp"
					android:text="Dec 12, 2018"
					android:textColor="@color/colorAccent"
					android:textSize="14sp"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintStart_toEndOf="@+id/propertyIV"
					app:layout_constraintTop_toBottomOf="@+id/propertyDescriptionTV" />

		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
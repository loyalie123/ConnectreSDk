<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

	<ImageView
			android:id="@+id/leadIV"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_marginStart="20dp"
			android:layout_marginTop="20dp"
			app:layout_constraintStart_toStartOf="parent"

			app:layout_constraintTop_toTopOf="parent" />

	<TextView
			android:id="@+id/leadHeadingTV"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="20dp"
			android:layout_marginTop="20dp"
			android:layout_marginEnd="12dp"
			android:ellipsize="end"
			android:maxLines="1"
			android:textColor="#262626"
			android:textSize="14sp"
			app:fontFamily="@font/sinkinsans_500medium"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@+id/leadIV"
			app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/leadSubHeadingTV"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="20dp"
			android:layout_marginTop="6dp"
			android:layout_marginEnd="12dp"
	android:maxLines="2"
			android:lineSpacingExtra="4.5dp"
			android:ellipsize="end"
			android:textColor="#B3262626"
			android:singleLine="false"
			android:textSize="11sp"
			app:fontFamily="@font/sinkinsans_400regular"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@+id/leadIV"
			app:layout_constraintTop_toBottomOf="@+id/leadHeadingTV" />

	<View
			android:id="@+id/bottomView"
			android:layout_width="0dp"
			android:layout_height="0.5dp"
			android:layout_marginStart="20dp"
			android:layout_marginTop="20dp"
			android:layout_marginEnd="20dp"
			android:background="#1a000000"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/leadIV" />


</androidx.constraintlayout.widget.ConstraintLayout>
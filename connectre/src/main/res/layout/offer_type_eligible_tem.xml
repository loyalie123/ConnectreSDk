<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

	<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/offerEligibleView"
			android:layout_width="68dp"
			android:layout_height="68dp"
			android:layout_marginStart="20dp"
			android:layout_marginTop="10dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/eligibleTopView"
			app:srcCompat="@drawable/ic_offer_path_eligible" />

	<ImageView
			android:layout_width="22dp"
			android:layout_height="26dp"
			android:src="@drawable/ic_offer"
			app:layout_constraintBottom_toBottomOf="@+id/offerEligibleView"
			app:layout_constraintEnd_toEndOf="@+id/offerEligibleView"
			app:layout_constraintStart_toStartOf="@+id/offerEligibleView"
			app:layout_constraintTop_toTopOf="@+id/offerEligibleView" />

	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="14dp"
			android:layout_marginEnd="20dp"
			android:background="@drawable/offer_bg_grey"
			android:minHeight="80dp"
			android:paddingBottom="15dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@id/offerEligibleView"
			app:layout_constraintTop_toBottomOf="@+id/eligibleTopView">

		<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/offerEligibleTV"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="15dp"
				android:layout_marginTop="15dp"
				android:letterSpacing="0.01"
				android:text="@string/eligible"
				android:textColor="#662d92"
				android:textSize="13sp"
				app:fontFamily="@font/sinkinsans_500medium"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

		<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/titleElgblTV"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="15dp"
				android:layout_marginTop="8dp"
				android:lineSpacingExtra="8sp"
				android:text="You are eligible for this  Lorem Ipsum Ã¨ un testo segnaposto utilizzato"
				android:textColor="@color/textColorGrey"
				android:textSize="10sp"
				app:fontFamily="@font/sinkinsans_400regular"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/offerEligibleTV" />

		<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/tapToClaimTV"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="19dp"
				android:layout_marginEnd="15dp"
				android:text="Tap to claim"
				android:textColor="@color/textColorGreyAlpha30"
				android:textSize="9sp"
				app:fontFamily="@font/sinkinsans_500medium"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

	</androidx.constraintlayout.widget.ConstraintLayout>


	<View
			android:id="@+id/eligibleTopView"
			android:layout_width="0.5dp"
			android:layout_height="0dp"
			android:layout_marginStart="52dp"
			android:background="@drawable/vertical_line"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"

			/>

	<View
			android:id="@+id/eligibleBtmView"
			android:layout_width="0.5dp"
			android:layout_height="0dp"
			android:layout_marginStart="52dp"
			android:layout_marginTop="10dp"
			android:background="@drawable/vertical_line"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/offerEligibleView"

			/>

</androidx.constraintlayout.widget.ConstraintLayout>
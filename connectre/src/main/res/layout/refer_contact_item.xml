<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

	<com.makeramen.roundedimageview.RoundedImageView
			android:id="@+id/contactIV"
			android:layout_width="45dp"
			android:layout_height="45dp"
			android:layout_marginStart="25dp"
			android:layout_marginTop="25dp"
			android:src="@drawable/profile_dummy"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:riv_oval="true" />

	<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/contactNameTV"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="17dp"
			android:layout_marginTop="25dp"
			android:text="Name"
			android:textColor="@color/textColorGrey"
			app:fontFamily="@font/sinkinsans_500medium"
			app:layout_constraintStart_toEndOf="@+id/contactIV"
			app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/contactNumberTV"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="17dp"
			android:layout_marginTop="5dp"
			android:text="Number"
			android:textColor="@color/textColorGreyAlpha60"
			app:fontFamily="@font/sinkinsans_500medium"
			app:layout_constraintStart_toEndOf="@+id/contactIV"
			app:layout_constraintTop_toBottomOf="@+id/contactNameTV" />

	<View
			android:id="@+id/bottomView"
			android:layout_width="0dp"
			android:layout_height="0.5dp"
			android:layout_marginStart="20dp"
			android:layout_marginTop="18dp"
			android:layout_marginEnd="20dp"
			android:background="@color/textColorGreyAlpha10"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/contactIV" />

	<androidx.appcompat.widget.AppCompatRadioButton
			android:id="@+id/mReferRadioButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="20dp"
			android:buttonTint="@color/textColorGrey"
			android:clickable="false"
			android:duplicateParentState="true"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
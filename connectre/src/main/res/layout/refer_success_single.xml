<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="4dp"
		android:orientation="vertical">

	<TextView
			android:id="@+id/referNameTV"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="12dp"
			android:fontFamily="@font/sinkinsans_400regular"
			android:text="Sharukh khan of Mumbai "
			android:textColor="@color/textColorDark" />

	<TextView
			android:id="@+id/referNumberTV"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/referNameTV"
			android:layout_marginLeft="12dp"
			android:fontFamily="@font/sinkinsans_400regular"
			android:text="9745959470"
			android:textColor="@color/textColorGrey" />

	<ImageView
			android:id="@+id/successImg"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="8dp"
			android:src="@drawable/ic_check_circle_primary" />

	<TextView
			android:id="@+id/existingMemberTV"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="4dp"
			android:fontFamily="@font/sinkinsans_400regular"
			android:gravity="center"
			android:text="Existing\n member"
			android:textColor="@color/textColorGrey"
			android:textSize="10sp"
			android:visibility="gone" />

</RelativeLayout>